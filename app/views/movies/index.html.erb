<div class="container">
  <div class="row">
    <div class="col" data-controller="list-movies">
      <h1 class="h2 my-3 d-flex justify-content-center">Movies to watch üçø</h1>

      <div>
        <%= form_with url: movies_path, method: :get, html: {class: "mb-4", data: { list_movies_target: 'form' }} do |f| %>
          <%= f.label :query, "Type a movie title" %>
          <%= f.text_field :query,
                           class: "form-control",
                           value: params[:query],
                           data: { 
                            action: 'input->list-movies#update',
                            list_movies_target: 'input'
                          }
                           %>
        <% end %>

        <%= render "list", movies: @movies %>
      </div>
    </div>
  </div>
</div>
